pipeline {
    agent any

    stages {
        stage('Pre-build stg') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build --target pre-build .'
            }
        }
        stage('Build') {
            steps {
              sh 'DOCKER_BUILDKIT=1 docker build --target build .'
            }
        }
        stage('Test') {
            steps {
               sh 'DOCKER_BUILDKIT=1 docker build --target test .'
            }
        }
        stage('Security') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build --target security .'
            }
        }
        stage('Back-end') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build --target backend .'
            }
        }
        stage('Front-end') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build --target frontend .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "s3 cp src dst"'
            }
        }
        stage('Post') {
            steps {
                echo "Clear env"
            }
        }
    }
}
